pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building the code...'
                // Example: Use Maven to build the code
                sh 'mvn clean install'
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running Unit and Integration Tests...'
                // Example: Use JUnit or another testing framework
                sh 'mvn test'
            }
            post {
                always {
                    mail to: 'faiz.zafar2004@gmail.com',
                         subject: "Build ${currentBuild.fullDisplayName}: Unit and Integration Tests",
                         body: "Unit and Integration Tests have finished. Please check the build status."
                         // attachmentsPattern: '**/*.log' // Uncomment if you have log files to attach
                }
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'Analyzing the code...'
                // Example: Use SonarQube for code analysis
                sh 'sonar-scanner'
            }
        }
        
        stage('Security Scan') {
            steps {
                echo 'Performing Security Scan...'
                // Example: Use OWASP Dependency Check or another security tool
                sh 'dependency-check --project myProject --scan .'
            }
            post {
                always {
                    mail to: 'faiz.zafar2004@gmail.com',
                         subject: "Build ${currentBuild.fullDisplayName}: Security Scan",
                         body: "Security Scan has finished. Please check the build status."
                         // attachmentsPattern: '**/*.log' // Uncomment if you have log files to attach
                }
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to Staging...'
                // Example: Use SCP or AWS CLI to deploy to staging
                sh 'scp target/myapp.jar user@staging-server:/path/to/deploy'
            }
        }
        
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running Integration Tests on Staging...'
                // Example: Use a script or tool to run tests on staging
                sh 'ssh user@staging-server "run-staging-tests.sh"'
            }
        }
        
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to Production...'
                // Example: Use SCP or AWS CLI to deploy to production
                sh 'scp target/myapp.jar user@production-server:/path/to/deploy'
            }
        }
    }
}
